<h1>Posts Feed</h1>
<% @posts.each do |post| %> 
    <h3><a href="/posts/<%= post.id %>"><%= post.title %></a><h3>
    <img src="<%= post.image_url %>" alt="<%= post.title %>" height="250" width="250">
<br><br>

    <p><small><%= post.description %></small></p>
    <p></small>Posted on: <%= post.created_at %></small></p>
<% end %>